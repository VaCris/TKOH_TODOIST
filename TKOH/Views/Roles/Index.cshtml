@model List<TKOH.DTOs.RoleDTO>
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Role Management";
}

<h3>@ViewData["Title"]</h3>
<hr />

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Role</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-sm btn-info">Edit</a>
                    <a asp-action="Details" asp-route-id="@role.Id" class="btn btn-sm btn-secondary">Details</a>
                    <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>