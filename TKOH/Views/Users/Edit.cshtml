@model TKOH.DTOs.UpdateUserDTO
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Edit User";
}

<h3>@ViewData["Title"]</h3>
<hr />

<form asp-action="Edit" asp-route-id="@Model.Id" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Username" class="form-label"></label>
        <input asp-for="Username" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="CurrentScore" class="form-label"></label>
        <input asp-for="CurrentScore" class="form-control" type="number" />
    </div>

    <div class="form-check mb-3">
        <input asp-for="Enabled" class="form-check-input" type="checkbox" />
        <label asp-for="Enabled" class="form-check-label">Enabled</label>
    </div>

    <div class="form-check mb-3">
        <input asp-for="Locked" class="form-check-input" type="checkbox" />
        <label asp-for="Locked" class="form-check-label">Locked</label>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" type="password" />
    </div>

    <div class="mb-3">
        <label>Roles</label>
        <select asp-for="RoleIds" asp-items="@(ViewBag.Roles as List<SelectListItem>)" multiple class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>