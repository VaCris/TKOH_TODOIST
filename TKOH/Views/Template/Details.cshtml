@model TKOH.DTOs.TemplateDTO
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Template Details";
}

<h3>@ViewData["Title"]</h3>
<hr />

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@(!string.IsNullOrEmpty(Model.Title) ? Model.Title : "-")</dd>

            <dt class="col-sm-3">Content</dt>
            <dd class="col-sm-9">@(!string.IsNullOrEmpty(Model.Content) ? Model.Content : "-")</dd>

            <dt class="col-sm-3">Day of the Week</dt>
            <dd class="col-sm-9">
                @(Model.Weekday switch
                {
                    1 => "Monday",
                    2 => "Tuesday",
                    3 => "Wednesday",
                    4 => "Thursday",
                    5 => "Friday",
                    6 => "Saturday",
                    7 => "Sunday",
                    _ => "-"
                })
            </dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                    @(Model.IsActive ? "Active" : "Inactive")
                </span>
            </dd>

            @* <dt class="col-sm-3">Date and Time</dt>
            <dd class="col-sm-9">
                @{
                    DateTime date;
                    if (DateTime.TryParse(@Model.Timestamp, out date))
                    {
                        @date.ToString("g")
                    }
                    else
                    {
                        @Model.Timestamp
                    }
                }
            </dd> *@
        </dl>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to list</a>
        </div>
    </div>
</div>
