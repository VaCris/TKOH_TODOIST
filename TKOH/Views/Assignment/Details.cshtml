@model TKOH.DTOs.AssignmentDetailDTO
@{
    ViewData["Title"] = "Detalles de la Asignación";
}

<h3>@ViewData["Title"]</h3>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-3">ID Asignación</dt>
        <dd class="col-sm-9">@Model.Id</dd>

        <dt class="col-sm-3">Plantilla</dt>
        <dd class="col-sm-9">@Model.TemplateTitle</dd>

        <dt class="col-sm-3">Usuario</dt>
        <dd class="col-sm-9">@Model.UserName</dd>

        <dt class="col-sm-3">Fecha Límite</dt>
        <dd class="col-sm-9">@Model.DueDate.ToShortDateString()</dd>

        <dt class="col-sm-3">Estado</dt>
        <dd class="col-sm-9">@Model.Status</dd>

        <dt class="col-sm-3">Evidencia</dt>
        <dd class="col-sm-9">@Model.Evidence</dd>

        <dt class="col-sm-3">Contenido de la Plantilla</dt>
        <dd class="col-sm-9"><pre>@Model.TemplateContent</pre></dd>
    </dl>
</div>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>